= form_tag post_comments_path(post), method: :post, id: 'comment_form'
  = text_area_tag :body, '', class: 'w-full rounded-md resize-none', id: 'body', name: 'body', rows: 3, placeholder: t('comment.add')
  = button_tag t('comment.save'), type: 'submit', class: 'py-2 px-4 border border-transparent rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700'
