<h2 class="mb-6 text-center text-3xl leading-9 font-extrabold text-gray-900">Sign in to your account</h2>
<div class="w-max mx-auto bg-gray-200 py-8 px-4 shadow sm:rounded-lg sm:px-10">
  <div class="flex justify-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "w-96 rounded-md", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field mt-2">
        <%= f.label :password %><br />
        <%= f.password_field :password, class: "w-96 rounded-md", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mt-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions pt-4">
        <%= f.submit "Sign in", class: "flex justify-center w-full py-2 px-4 border border-transparent rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700" %>
      </div>
    <% end %>
  </div>

  <div class="flex justify-center w-96 mx-auto m-2">
    <%= render "devise/shared/links" %>
  </div>
</div>
